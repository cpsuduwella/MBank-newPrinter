<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="10dp">
		
		<LinearLayout
			android:layout_width="fill_parent"
		  	android:layout_height="wrap_content"
		  	android:orientation="horizontal"
		  	android:layout_marginTop="20dp">
		
			<ImageView
		    	android:id="@+id/transaction_icon"
		    	android:src="@drawable/money_antique" 
		    	android:layout_height="150dp" 
		    	android:layout_width="140dp" 
		    	android:padding="10dp">
		    </ImageView>
		    
		    <TextView
		    	android:text="Details of current transaction, Presse print menu to ptint and save the transaction"
		    	android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:paddingRight="10dp"
		  		android:layout_gravity="center" 
		  		android:textSize="16dp">
		    </TextView>
		    
		</LinearLayout>
		
		<LinearLayout
			android:orientation="vertical"							
			android:layout_width="fill_parent"					
			android:layout_height="wrap_content"		 
			android:layout_marginTop="5dp">				
	
			<LinearLayout
			  	android:orientation="horizontal"
			  	android:layout_width="fill_parent"
			  	android:layout_height="wrap_content">
			    
			    <TextView 
			    	android:id="@+id/transaction_client_name_lable"
			    	android:text="Name"
			    	android:paddingLeft="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_weight="0.5"
			    	android:layout_gravity="center"
			    	android:textSize="18dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">
			    </TextView>
			    
			    <TextView
			    	android:id="@+id/transaction_client_name_value"
			    	android:layout_gravity="right"
			    	android:textSize="18dp"
			    	android:paddingRight="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" 
			    	android:text="">
			    </TextView>
			    
			</LinearLayout>
		
			<LinearLayout
			  	android:orientation="horizontal"
			  	android:layout_width="fill_parent"
			  	android:layout_height="wrap_content">
			    
			    <TextView 
			    	android:id="@+id/transaction_client_nic_lable"
			    	android:text="NIC"
			    	android:paddingLeft="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_weight="0.5"
			    	android:layout_gravity="center"
			    	android:textSize="18dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">
			    </TextView>
			    
			    <TextView
			    	android:id="@+id/transaction_client_nic_value"
			    	android:layout_gravity="right"
			    	android:textSize="18dp"
			    	android:paddingRight="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" 
			    	android:text="">
			    </TextView>
			    
			</LinearLayout>
		
			<LinearLayout
		  		android:orientation="horizontal"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content">
		    
			    <TextView 
			    	android:id="@+id/transaction_account_no_lable"
			    	android:text="Account no"
			    	android:paddingLeft="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_weight="0.5"
			    	android:layout_gravity="center"
			    	android:textSize="18dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">
			    </TextView>
			    
			    <TextView
			    	android:id="@+id/transaction_account_no_value"
			    	android:layout_gravity="right"
			    	android:textSize="18dp"
			    	android:paddingRight="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" 
			    	android:text="">
			    </TextView>
		    
			</LinearLayout>
			
			<LinearLayout
		  		android:orientation="horizontal"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content">
		    
			    <TextView 
			    	android:id="@+id/transaction_type_lable"
			    	android:text="Transaction type"
			    	android:paddingLeft="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_weight="0.5"
			    	android:layout_gravity="center"
			    	android:textSize="18dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">
			    </TextView>
			    
			    <TextView
			    	android:id="@+id/transaction_type_value"
			    	android:layout_gravity="right"
			    	android:textSize="18dp"
			    	android:paddingRight="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" 
			    	android:text="">
			    </TextView>
		    
			</LinearLayout>
			
			<LinearLayout
		  		android:orientation="horizontal"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content">
		    
			    <TextView 
			    	android:id="@+id/transaction_previous_balance_lable"
			    	android:text="Previous balance"
			    	android:paddingLeft="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_weight="0.5"
			    	android:layout_gravity="center"
			    	android:textSize="18dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">
			    </TextView>
			    
			    <TextView
			    	android:id="@+id/transaction_previous_balance_value"
			    	android:layout_gravity="right"
			    	android:textSize="18dp"
			    	android:paddingRight="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" 
			    	android:text="00">
			    </TextView>
		    
			</LinearLayout>
		
			<LinearLayout
		  		android:orientation="horizontal"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content">
		    
			    <TextView 
			    	android:id="@+id/transaction_amount_lable"
			    	android:text="Transaction amount"
			    	android:paddingLeft="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_weight="0.5"
			    	android:layout_gravity="center"
			    	android:textSize="18dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">
			    </TextView>
			    
			    <TextView
			    	android:id="@+id/transaction_amount_value"
			    	android:layout_gravity="right"
			    	android:textSize="18dp"
			    	android:paddingRight="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" 
			    	android:text="00">
			    </TextView>
		    
			</LinearLayout>
			
			<LinearLayout
		  		android:orientation="horizontal"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content">
		    
			    <TextView 
			    	android:id="@+id/transaction_balance_amount_lable"
			    	android:text="Balance amount"
			    	android:paddingLeft="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_weight="0.5"
			    	android:layout_gravity="center"
			    	android:textSize="18dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">
			    </TextView>
			    
			    <TextView
			    	android:id="@+id/transaction_balance_amount_value"
			    	android:layout_gravity="right"
			    	android:textSize="18dp"
			    	android:paddingRight="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" 
			    	android:text="00">
			    </TextView>
		    
			</LinearLayout>
		
			<LinearLayout
		  		android:orientation="horizontal"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content">
		    
			    <TextView 
			    	android:id="@+id/transaction_time_lable"
			    	android:text="Time"
			    	android:paddingLeft="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_weight="0.5"
			    	android:layout_gravity="center"
			    	android:textSize="18dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">
			    </TextView>
			    
			    <TextView
			    	android:id="@+id/transaction_time_value"
			    	android:layout_gravity="right"
			    	android:textSize="18dp"
			    	android:paddingRight="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" 
			    	android:text="">
			    </TextView>
			    
			</LinearLayout>
			
			<LinearLayout
		  		android:orientation="horizontal"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content">
		    
			    <TextView 
			    	android:id="@+id/transaction_receiptid_lable"
			    	android:text="Receipt id"
			    	android:paddingLeft="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_weight="0.5"
			    	android:layout_gravity="center"
			    	android:textSize="18dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">
			    </TextView>
			    
			    <TextView
			    	android:id="@+id/transaction_receiptid_value"
			    	android:layout_gravity="right"
			    	android:textSize="18dp"
			    	android:paddingRight="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" 
			    	android:text="">
			    </TextView>
			    
			</LinearLayout>
		
		</LinearLayout>
		
	</LinearLayout>

</ScrollView>
