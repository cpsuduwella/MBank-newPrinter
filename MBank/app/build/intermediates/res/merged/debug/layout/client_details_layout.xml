<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="10dp">
		
		<LinearLayout
			android:layout_width="fill_parent"
		  	android:layout_height="wrap_content"
		  	android:orientation="horizontal"
		  	android:layout_marginTop="10dp">
		
			<ImageView
		    	android:id="@+id/user_icon"
		    	android:src="@drawable/testimonialsb" 
		    	android:layout_height="150dp"
		    	android:layout_width="140dp"
		    	android:padding="10dp">
		    </ImageView>
		    
		    <TextView
		    	android:text="Details of selected client, Presse select menu to do transaction with this client"
		    	android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:paddingRight="10dp"
		  		android:layout_gravity="center" 
		  		android:textSize="16dp">
		    </TextView>
		    
		</LinearLayout>
		
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_marginTop="10dp">
	
			<LinearLayout
			  	android:orientation="horizontal"
			  	android:layout_width="fill_parent"
			  	android:layout_height="wrap_content">
			    
			    <TextView 
			    	android:id="@+id/client_name_lable"
			    	android:text="Name"
			    	android:paddingLeft="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_weight="0.5"
			    	android:layout_gravity="center"
			    	android:textSize="18dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">
			    </TextView>
			    
			    <TextView
			    	android:id="@+id/client_name_value"
			    	android:layout_gravity="right"
			    	android:textSize="18dp"
			    	android:paddingRight="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" 
			    	android:text="">
			    </TextView>
			    
			</LinearLayout>
		
			<LinearLayout
			  	android:orientation="horizontal"
			  	android:layout_width="fill_parent"
			  	android:layout_height="wrap_content">
			    
			    <TextView 
			    	android:id="@+id/client_nic_lable"
			    	android:text="NIC"
			    	android:paddingLeft="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_weight="0.5"
			    	android:layout_gravity="center"
			    	android:textSize="18dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content">
			    </TextView>
			    
			    <TextView
			    	android:id="@+id/client_nic_value"
			    	android:layout_gravity="right"
			    	android:textSize="18dp"
			    	android:paddingRight="10dp"
			    	android:paddingTop="10dp"
			    	android:paddingBottom="10dp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content" 
			    	android:text="">
			    </TextView>
			    
			</LinearLayout>
		
			<LinearLayout
		  		android:orientation="horizontal"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content">
		    
		    <TextView 
		    	android:id="@+id/client_birthdate_lable"
		    	android:text="Birth date"
		    	android:paddingLeft="10dp"
		    	android:paddingTop="10dp"
		    	android:paddingBottom="10dp"
		    	android:layout_weight="0.5"
		    	android:layout_gravity="center"
		    	android:textSize="18dp"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content">
		    </TextView>
		    
		    <TextView
		    	android:id="@+id/client_birthdate_value"
		    	android:layout_gravity="right"
		    	android:textSize="18dp"
		    	android:paddingRight="10dp"
		    	android:paddingTop="10dp"
		    	android:paddingBottom="10dp"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content" 
		    	android:text="">
		    </TextView>
		    
		</LinearLayout>
		
		<LinearLayout
		  		android:orientation="horizontal"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content">
		    
		    <TextView 
		    	android:id="@+id/client_account_no_lable"
		    	android:text="Account no"
		    	android:paddingLeft="10dp"
		    	android:paddingTop="10dp"
		    	android:paddingBottom="10dp"
		    	android:layout_weight="0.5"
		    	android:layout_gravity="center"
		    	android:textSize="18dp"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content">
		    </TextView>
		    
		    <TextView
		    	android:id="@+id/client_account_no_value"
		    	android:layout_gravity="right"
		    	android:textSize="18dp"
		    	android:paddingRight="10dp"
		    	android:paddingTop="10dp"
		    	android:paddingBottom="10dp"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content" 
		    	android:text="">
		    </TextView>
		    
		</LinearLayout>
		
		<LinearLayout
		  		android:orientation="horizontal"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content">
		    
		    <TextView 
		    	android:id="@+id/client_balance_amount_lable"
		    	android:text="Balance amount"
		    	android:paddingLeft="10dp"
		    	android:paddingTop="10dp"
		    	android:paddingBottom="10dp"
		    	android:layout_weight="0.5"
		    	android:layout_gravity="center"
		    	android:textSize="18dp"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content">
		    </TextView>
		    
		    <TextView
		    	android:id="@+id/client_balance_amount_value"
		    	android:layout_gravity="right"
		    	android:textSize="18dp"
		    	android:paddingRight="10dp"
		    	android:paddingTop="10dp"
		    	android:paddingBottom="10dp"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content" 
		    	android:text="00">
		    </TextView>
		    
		</LinearLayout>
		
		<LinearLayout
		  		android:orientation="horizontal"
		  		android:layout_width="fill_parent"
		  		android:layout_height="wrap_content">
		    
		    <TextView 
		    	android:id="@+id/client_previous_transaction_lable"
		    	android:text="Last deposit"
		    	android:paddingLeft="10dp"
		    	android:paddingTop="10dp"
		    	android:paddingBottom="10dp"
		    	android:layout_weight="0.5"
		    	android:layout_gravity="center"
		    	android:textSize="18dp"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
>
		    </TextView>
		    
		    <TextView
		    	android:id="@+id/client_previous_transaction_value"
		    	android:layout_gravity="right"
		    	android:textSize="18dp"
		    	android:paddingRight="10dp"
		    	android:paddingTop="10dp"
		    	android:paddingBottom="10dp"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content" 
		    	android:text="00"
		    	android:typeface="serif">
		    </TextView>
		    
		</LinearLayout>
		
		</LinearLayout>
		
	</LinearLayout>

</ScrollView>
