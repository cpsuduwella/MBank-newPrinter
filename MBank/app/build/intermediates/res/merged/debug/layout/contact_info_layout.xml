<?xml version="1.0" encoding="utf-8"?>

<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android" 
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:gravity="center">
		
		<LinearLayout   	
			android:layout_width="fill_parent"
		  	android:layout_height="wrap_content"
		  	android:orientation="horizontal"
		  	android:layout_marginTop="10dp">
		
			<ImageView
		    	android:id="@+id/weather_icon"
		    	android:paddingRight="5dp"
		    	android:layout_width="100dp"
		    	android:src="@drawable/address_icon" android:layout_height="80dp"
		    	android:gravity="center" android:paddingLeft="30dp">
		    </ImageView>
		    
		    <TextView
		    	android:text="@string/address"
		    	android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:paddingLeft="5dp"
		  		android:layout_gravity="center_vertical"
		  		android:gravity="right" 
		  		android:textSize="16dp" 
		  		android:paddingRight="30dp"
		  		android:typeface="serif">
		    </TextView>
		    
		</LinearLayout>
	
		<LinearLayout   	
			android:layout_width="fill_parent"
		  	android:layout_height="wrap_content"
		  	android:orientation="horizontal"
		  	android:layout_marginTop="10dp">
		
			<ImageView
		    	android:id="@+id/weather_icon"
		    	android:paddingRight="5dp"
		    	android:layout_width="100dp"
		    	android:src="@drawable/email1_icon" android:layout_height="80dp"
		    	android:gravity="center" android:paddingLeft="30dp">
		    </ImageView>
		    
		    <TextView
		    	android:text="@string/email"
		    	android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:paddingLeft="5dp"
		  		android:layout_gravity="center_vertical"
		  		android:gravity="right" 
		  		android:textSize="16dp" 
		  		android:paddingRight="30dp"
		  		android:typeface="serif">
		    </TextView>
		    
		</LinearLayout>
		
		<LinearLayout   	
			android:layout_width="fill_parent"
		  	android:layout_height="wrap_content"
		  	android:orientation="horizontal"
		  	android:layout_marginTop="10dp">
		
			<ImageView
		    	android:id="@+id/weather_icon"
		    	android:paddingRight="5dp"
		    	android:layout_width="100dp"
		    	android:src="@drawable/telephone_icon" android:layout_height="80dp"
		    	android:gravity="center" android:paddingLeft="30dp">
		    </ImageView>
		    
		    <TextView
		    	android:text="@string/telephone"
		    	android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:paddingLeft="5dp"
		  		android:layout_gravity="center_vertical"
		  		android:gravity="right" 
		  		android:textSize="16dp" 
		  		android:paddingRight="30dp"
		  		android:typeface="serif">
		    </TextView>
		    
		</LinearLayout>
		
		<LinearLayout	
			android:layout_width="fill_parent"
		  	android:layout_height="wrap_content"
		  	android:orientation="horizontal">
		
			<ImageView
		    	android:id="@+id/weather_icon"
		    	android:paddingRight="5dp"
		    	android:layout_width="100dp"
		    	android:src="@drawable/web_icon1" 
		    	android:layout_height="80dp"
		    	android:gravity="center" android:paddingLeft="30dp">
		    </ImageView>
		    
		    <TextView
		    	android:text="@string/web"
		    	android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:paddingLeft="5dp"
		  		android:layout_gravity="center_vertical"
		  		android:gravity="right" 
		  		android:textSize="16dp" 
		  		android:paddingRight="30dp"
		  		android:typeface="serif">
		    </TextView>
		    
		</LinearLayout>
	
	</LinearLayout>

	</ScrollView>